{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": true,
    "sourceMap": false,
    "outDir": ".built",
    "rootDir": ".",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "noEmitHelpers": true
  },
  "exclude": ["node_modules", "bundle", "dist", "loaders"],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useCache": true,
    "useBabel": true,
    "babelCore": "babel-core"
  },
  "angularCompilerOptions": {
    "genDir": ".",
    "debug": false
  }
}
